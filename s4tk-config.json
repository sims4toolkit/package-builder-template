{
  "buildFolders": [
    "./out"
  ],
  "cache": true,
  "cachePath": "./s4tk-cache.json",
  "cancelOnError": true,
  "sourceFolder": "./src",
  "sourcePatterns": {
    "packages": [
      "./**/*.package"
    ],
    "simdata": [
      "./**/*.SimData.xml"
    ],
    "tuning": [
      "./**/!(*.SimData).xml"
    ]
  },
  "sourceSubfolders": {
    "xml": "MyModName",
    "packages": "MyModName_AddOn"
  }
}